<Window x:Class="Proxar.Vue.Connexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proxar.Vue"
        mc:Ignorable="d"
        Title="Connexion" Height="300" Width="300">
    <Grid>
        <PasswordBox x:Name="MotDePasse" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Width="125"/>
        <Button x:Name="connexionButton" Content="Connexion" HorizontalAlignment="Center" Margin="0,175,0,0" VerticalAlignment="Top" Width="75" Click="connexionButton_Click"/>
        <Label x:Name="passLabel" Content="Mot de passe :&#xD;&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="2.394,3.46" Margin="80,110,0,0" Height="26"/>
        <TextBox x:Name="Identifiant" HorizontalAlignment="Center" Height="23" Margin="0,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="124"/>
        <Label x:Name="idLabel" Content="Identifiant :&#xD;&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,50,0,0" Height="27"/>
    </Grid>
</Window>
